@page "/playground"

<MudText>Outlined cards </MudText>
<MudCard Outlined="true" Class = "pa-2 ml-16 mr-16 mt-6">
    <MudCardMedia Image="https://upload.wikimedia.org/wikipedia/commons/thumb/7/75/Bowl_of_SpaghettiOs.jpg/800px-Bowl_of_SpaghettiOs.jpg" Height="200" />
    <MudCardContent>
        <MudText Typo="Typo.h5">SpaghettiOs</MudText>
        <MudText Typo="Typo.body2">Open can, pour in bowl, microwave a minute or so.</MudText>
        <MudText Typo="Typo.body2"><i>Add sliced hotdog if you have it.</i></MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>
</MudCard>
<MudCard Outlined="true" Class = "pa-2 ml-16 mr-16 mt-6">
    <MudCardMedia Image="images/food/apple_sauce.jpg" Height="300"/>
    <MudCardContent>
        <MudText Typo="Typo.h5">Instantpot AppleSauce</MudText>
        <MudText Typo="Typo.body2">Long winded recipe</MudText>
        <MudText Typo="Typo.body2"><i>What to do when you have alot of apples</i></MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>
</MudCard>
<MudCard Outlined="true" Class = "pa-2 ml-16 mr-16 mt-6">
    <MudCardMedia Image="images/food/corporate_jambalaya.jpg" Height="300"/>
    <MudCardContent>
        <MudText Typo="Typo.h5">Corporate Jambalaya</MudText>
        <MudText Typo="Typo.body2">Add one can of Jambalaya mix and one package of sausage to Instantpot. 
            Pressure cook for 1 Minute. Allow Natural release.</MudText>
        <MudText Typo="Typo.body2"><i>Was a good DIY recipe to pick ingredients up from 24 hour WalMart pre-Covid. </i></MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
    </MudCardActions>
</MudCard>